<odoo>

        <!-- Animal Tree View -->
        <record id="view_animal_tree" model="ir.ui.view">
            <field name="name">animal.tree</field>
            <field name="model">animal</field>
            <field name="arch" type="xml">
                <tree default_order = 'contract_number'>
                    <field name="contract_number"/>
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="color_id"/>
                    <field name="years_old" optional="hide"/>
                    <field name="firma" optional="hide"/>                
                    <field name="contract_number_year" optional="show"/>
                </tree>
            </field>
        </record>

        <!-- Animal Form View -->
        <record id="view_animal_form" model="ir.ui.view">
            <field name="name">animal.form</field>
            <field name="model">animal</field>
            <field name="arch" type="xml">
                <form string="Animal">
                    <sheet>
                        <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                        <field name="active" invisible="1" />
                        <field name="image" widget='image' class="oe_avatar" />
                        <div class="oe_title">
                            <h1>
                                <label for="name" class="oe_inline"/>
                                <field name="name"/>
                            </h1>
                            <h1>
                                <label for="contract_number" class="oe_inline"/>
                            <field name="contract_number"/>
                            </h1>
                            <field name="contract_number_year"/>
                        </div>

                        <group id="main">
                            <group id="left" string="Gato">
                                <field name="gender"/>
                                <field name="fur" />
                                <field name="color_id"/>
                                <field name="cub"/>

                            </group>
                            <group id="right" string="Salud">
                                <field name="despa"/>
                                <field name="vacuna"/>
                                <field name="leuc"/>
                                <field name="inmuno"/>
                                <field name="ester"/>
                                <field name="chip"/>
                            </group>
                        </group>
                        <group>
                            <group id="dates" string="Fechas">
                                <field name="years_old"/>
                                <field name="birth_date"/>
                                <field name="adoption_date"/>
                            </group>

                            <group id="owner" string="Owner">
                                <field name="partner_id" invisible="1"/>
                                <field name="firma"/>
                            </group>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field
                        name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

<!--         Search for animal-->
        <record id="view_animal_search" model="ir.ui.view">
            <field name="name">animal.search</field>
            <field name="model">animal</field>
            <field name="arch" type="xml">
                <search string="Animals">
                    <field
                    name="name"
                    filter_domain="['|', ('name', 'ilike', self), ('ref', 'ilike', self)]"
                    string="Name"
                />
                </search>
            </field>
        </record>

        <record id="action_animal" model="ir.actions.act_window">
            <field name="name">Animals</field>
            <field name="res_model">animal</field>
            <field name="view_mode">tree,form</field>
<!--            <field name="search_view_id" ref="view_animal_search" />-->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create an animal</p>
            </field>
        </record>

</odoo>
